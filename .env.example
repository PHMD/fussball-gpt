# LLM Configuration (choose one)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# Data Refresh Configuration
DATA_REFRESH_INTERVAL=300

# Player Statistics API (FREE tier - 100 requests/day)
# Uses direct API-Football endpoints (not RapidAPI marketplace)
# Free tier provides historical data (2021-2023 seasons)
# Current season (2024/25) requires paid subscription
RAPIDAPI_KEY=your_rapidapi_key_here

# The Odds API (FREE tier - 500 requests/month)
# Provides pre-match betting odds for Bundesliga fixtures
# Get free API key at: https://the-odds-api.com/
ODDS_API_KEY=your_odds_api_key_here
